{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "es6": true
    },
    "plugins": ["prettier", "import", "react-hooks"],

    "extends": ["prettier", "react-app"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prefer-const": 2,
        "complexity": ["warn", { "max": 11 }],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "linebreak-style": ["error", "windows"],
        "no-unused-vars": "warn",
        "no-use-before-define": "off"
    }
}
